.container {
    padding: 20rpx;
  }
  
  .header {
    margin-bottom: 30rpx;
  }
  
  .course-info {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .course-name {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  
  .course-type {
    font-size: 28rpx;
    color: #666;
  }
  
  .loading {
    display: flex;
    justify-content: center;
    padding: 50rpx 0;
  }
  
  .outline-content {
    font-size: 30rpx;
    line-height: 1.6;
  }
  
  .empty {
    text-align: center;
    color: #999;
    padding: 50rpx 0;
  }